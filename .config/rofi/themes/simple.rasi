@import "./colors.rasi"

configuration {
  font: "Ubuntu Nerd Font 11";
  drun {
    display-name: "";
  }
  window {
    display-name: "";
  }
  timeout {
    delay: 10;
    action: "kb-cancel";
  }
}

* {
  border: 0;
  margin: 0;
  padding: 0;
  spacing: 0;

  fg: @foreground;
  bg: @background;
  fg-alt: @foreground-alt;
  bg-alt: @background-alt;

  background-color: @bg;
  text-color: @fg-alt;
}

window {
  border: 1px;
  border-radius: 0;
  border-color: @gray;
  padding: 6px;
  transparency: "real";
}

mainbox {
  children: [inputbar, listview];
}

inputbar {
  children: [prompt, entry];
}

listview {
  lines: 8;
  scrollbar: true;
}

scrollbar {
  background-color: @bg;
  handle-color: @gray;
  handle-width: 8px ;
  margin: 0 0 0 8px;
}

element-text, entry {
  padding: 10px;
}

element-icon, prompt {
  padding: 10px 0 10px 10px;
}

element-text selected, element-icon selected {
  background-color: @bg-alt;
  text-color: @bg;
}
